@using WebApplication1.Models
@model IEnumerable<FitnesCentar>

@{
    ViewBag.Title = "IstorijaTreninga";
}

<head>
    <style>
        div {
            background-color: darkgoldenrod;
        }
        body {
            background-image: url("../../teretana.jpg");
            color: black;
            font-family: 'Bookman Old Style';
        }

        table {
            background-color: goldenrod;
            border-color: black;
            margin-left: auto;
            margin-right: auto;
            width: 100%;
            font-size: 15px;
        }

        table, tr, th, td {
            border: 3px solid darkgoldenrod;
        }

        th {
            text-align: center;
        }

        .sort {
            background-color: goldenrod;
            margin-left: auto;
            margin-right: auto;
            width: 42%;
            height: 30%;
        }

        input[type=submit] {
            background-color: green;
            color: white;
            border: 1px solid white;
            border-color: white;
            text-align: center;
        }

        h2 {
            background-color: white;
            text-align: center;
            color: black;
            margin-left: auto;
            margin-right: auto;
            font-family: 'Bookman Old Style';
        }

        .forma {
            background-color: darkgoldenrod;
            text-align: right;
        }
    </style>
</head>

<body>
    <h2>IstorijaTreninga</h2>
    <form action="~/Posetilac/SortiranjeT" align="right" class="forma">
        <select name="vrednost">
            <option>Naziv</option>
            <option>Tip treninga</option>
            <option>Datum i vreme odrzavanja treninga</option>
        </select>
        <select name="nacin">
            <option>Opadajuce</option>
            <option>Rastuce</option>
        </select>
        <input type="submit" value="Sortiraj" />
    </form>
    <table border="1">
        <tr>
            <th>Naziv</th>
            <th>Tip treninga</th>
            <th>Trajanje treninga</th>
            <th>Datum i vreme treninga</th>
            <th>Fitnes centar</th>
        </tr>
        @foreach (var item in ViewBag.SpisakTreninga)
        {
            <tr>
                <td>@item.Naziv</td>
                <td>@item.TipTreninga</td>
                <td>@item.TrajanjeTreninga</td>
                <td>@item.FormatiranDatum</td>
                @foreach (FitnesCentar item2 in Model)
                {
                    if (item.FitnesCentar.Id == item2.Id)
                    {
                        <td>@item2.Naziv</td>
                    }
                }
            </tr>
        }
    </table>
    <h2 style="width:42%; height:30%">Pretraga</h2>
    <div class="sort">
        @*<h2>Pretraga</h2>*@
        <form accept-charset="UTF-8" action="~/Posetilac/PretragaT">
            <table>
                <tr>
                    <td>Naziv:</td>
                    <td>
                        <input type="text" name="naziv" />
                    </td>
                </tr>
                <tr>
                    <td>Tip treninga:</td>
                    <td>
                        <input type="text" name="tip" />
                    </td>
                </tr>
                <tr>
                    <td>Naziv fitnes centra:</td>
                    <td>
                        <input type="text" name="nazivfitnesc" />
                    </td>
                </tr>
                <tr>
                    <td align="center" colspan="2">
                        <input type="submit" value="Pretrazi" />
                    </td>
                </tr>                                                              
            </table>
        </form>
    </div>
</body>